<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site" method="upgrade">
	<name>bootstrap-italia-scuole</name>
	<creationDate>07/04/23</creationDate>
	<author>Eddy Prosperi</author>
	<authorEmail>info@protocollicreativi.it</authorEmail>
	<authorUrl>info@protocollicreativi.it</authorUrl>
	<copyright>Copyright (C) 2023 Protocolli Creativi.</copyright>
	<license>Protocolli Creativi</license>
	<version>1.2.1</version>
	<description>Template Joomla basato su Design Italia</description>
	<inheritable>1</inheritable>
	<files>
		<folder>html</folder>
		<folder>language</folder>
		<filename>index.php</filename>
		<filename>component.php</filename>
		<filename>joomla.asset.json</filename>
		<filename>templateDetails.xml</filename>
	</files>
	<media destination="templates/site/bootstrap-italia-scuole" folder="media">
		<folder>css</folder>
		<folder>js</folder>
		<folder>fonts</folder>
		<folder>images</folder>
	</media>
	<positions>
		<position>logo</position>
		<position>menuprincipale</position>
		<position>menusecondario</position>
		<position>lingua</position>
		<position>cerca</position>
		<position>bottonecerca</position>
		<position>hero</position>
		<position>breadcrumbs</position>
		<position>above</position>
		<position>above1</position>
		<position>above2</position>
		<position>above3</position>
		<position>below</position>
		<position>below1</position>
		<position>below2</position>
		<position>below3</position>
		<position>user</position>
		<position>menucerca</position>
		<position>menublog</position>
		<position>menumodulorows</position>
		<position>textmodulorows</position>
		<position>footer1</position>
		<position>footer2</position>
		<position>footer3</position>
		<position>footer4</position>
		<position>arealegale</position>
		<position>copyright</position>
      		<position>copyrightcustom</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="topbarmessage" label="Elementi topbar" description="InsInserisci qui il testo per la topbar, puoi anche inserire un link per renderlo cliccabile">
				<field
					name="showTopBarMessage"
					type="radio"
					label="Visualizza titolo topbar"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="topbarTitle"
					type="text"
					default=""
					label="Titolo topbar"
					filter="string"
					showon="showTopBarMessage:1"
				/>
				<field
					name="topbarTitleLink"
					type="text"
					default=""
					label="Link"
					filter="string"
					showon="showTopBarMessage:1"
				/>
				<field
					name="showBtnTopbar"
					description=""
					type="radio"
					label="Mostra Bottoni Topbar"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="showBtnTopbarFields"
					type="subform"
					label="topbar1"
					multiple="true"
					max="10"
					showon="showBtnTopbar:1"
					>
					<form>
						<field
							name="topbarbuttontitle"
							type="text"
							label="Nome"
							/>
						<field
							name="topbarbuttonicon"
							type="text"
							label="Icona"
							description="scegli le icone di Bootstrap Italia (es. it-user)"
							/>
						<field
							name="topbarbuttonlink"
							type="url"
							label="link"
							size="30"
							filter="url"
							validate="url"
							/>
					</form>
				</field>
			</fieldset>
			<fieldset name="logo" label="Logo" description="Inserisci qui sotto il logo del sito web.L'immagine deve essere quadrata ad esempio 82x82 pixel. È consigliato l'utilizzo di file in formato svg.">
				<field
					name="showLogo"
					type="radio"
					label="Logo"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="imageLogo"
					type="media"
					label="Carica l'immagine del logo"
					directory="images"
					default=""
					showon="showLogo:1"
					>
				</field>
				<field
					name="logoTopTitle"
					type="text"
					default=""
					label="Sopra il titolo"
					filter="string"
					showon="showLogo:1"
				/>
				<field
					name="logoTitle"
					type="text"
					default=""
					label="Titolo Logo"
					filter="string"
					showon="showLogo:1"
				/>
				<field
					name="logoSubtitle"
					type="text"
					default=""
					label="Sottotitolo Logo"
					filter="string"
					showon="showLogo:1"
				/>
			</fieldset>
			<fieldset name="colors" label="Colori del tema">
            <field
                name="color_primary"
                type="color"
                label="Colore Primario"
                default="#0d6efd"
            />
            <field
                name="color_secondary"
                type="color"
                label="Colore Secondario"
                default="#6c757d"
            />
            <field
                name="color_success"
                type="color"
                label="Colore Successo"
                default="#198754"
            />
            <field
                name="color_danger"
                type="color"
                label="Colore Errore"
                default="#dc3545"
            />
            <field
                name="color_warning"
                type="color"
                label="Colore Attenzione"
                default="#ffc107"
            />
            <field
                name="color_info"
                type="color"
                label="Colore Informazioni"
                default="#0dcaf0"
            />
        </fieldset>
			<fieldset name="social" label="Social" description="Da qui puoi inserire le icone per i social che utilizzi">
				<field
					name="showSocial"
					type="radio"
					label="Mostra Link ai tuoi Social"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="showSocialTouchFields"
					type="subform"
					label="Social link"
					multiple="true"
					max="10"
					showon="showSocial:1"
					>
					<form>
						<field
							name="touchsubname"
							type="text"
							label="Nome"
							/>
						<field
							name="touchsubicon"
							type="text"
							label="Icona"
							description="Usa le icone di Bootstrap Italia (es. it-facebook o it-telegram)"
							/>
						<field
							name="touchsuburl"
							type="url"
							label="Link"
							size="30"
							filter="url"
							validate="url"
							/>
					</form>
				</field>
			</fieldset>
			<fieldset name="banner" label="Slide" description="Slide principale home page, è possibile inserire fino a 10 elementi">
				<field
					name="showBanner"
					type="radio"
					label="Mostra il banner"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="showBannerfields"
					type="subform"
					label="Banner"
					multiple="true"
					max="10"
					showon="showBanner:1"
					>
					<form>
						<field
							name="imageBanner"
							type="media"
							label="Immagine Slide home page"
							directory="images"
							default=""
							showon="showBanner:1"
							>
						</field>
						<field
							name="bannerTopTitle"
							type="text"
							default=""
							label="Sopra il titolo"
							filter="string"
							showon="showBanner:1"
						/>
						<field
							name="bannerTitle"
							type="text"
							default=""
							label="Titolo"
							filter="string"
							showon="showBanner:1"
						/>
						<field
							name="bannerDescription"
							type="text"
							default=""
							label="Descrizione"
							filter="string"
							showon="showBanner:1"
						/>
						<field
							name="bannerButton"
							type="text"
							default=""
							label="Testo del bottone"
							filter="string"
							showon="showBanner:1"
						/>
						<field
							name="bannerUrlButton"
							type="text"
							default=""
							label="Link del bottone"
							showon="showBanner:1"
						/>
					</form>
				</field>
			</fieldset>
			<fieldset name="logofooter" label="Logo Footer" description="Da qui puoi inserire i loghi nel footer, Imposta Logo su si per inserire il logo della Scuola ed il nome della scuola, Imposta Logo Europa su SI, per inserire il logo dell'Unione Europea">
				<field
					name="showLoghiFooter"
					type="radio"
					label="Logo"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="imageLogoFooter"
					type="media"
					label="Immagine"
					directory="images"
					default=""
					showon="showLoghiFooter:1"
					>
				</field>
				<field
					name="logoFooterTopTitle"
					type="text"
					default=""
					label="Sopra il titolo"
					filter="string"
					showon="showLoghiFooter:1"
				/>
				<field
					name="logoFooterTitle"
					type="text"
					default=""
					label="Titolo"
					filter="string"
					showon="showLoghiFooter:1"
				/>
				<field
					name="logoFooterSubtitle"
					type="text"
					default=""
					label="Sottotitolo"
					filter="string"
					showon="showLoghiFooter:1"
				/>
				<field
					name="showLogoEuropa"
					type="radio"
					label="Logo Europa"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="imageLogoEuropaFooter"
					type="media"
					label="Immagine"
					directory="images"
					default=""
					showon="showLogoEuropa:1"
					>
				</field>
				<field
					name="logoFooterEuropaDescrizione"
					type="text"
					default=""
					label="Descrizione"
					filter="string"
					showon="showLogoEuropa:1"
				/>
			</fieldset>
			<fieldset name="copyright" label="Copyright" description="Da qui puoi inserire il testo relativo al copyright">
				<field
					name="showCopyright"
					type="radio"
					label="Inserisci copyright"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="descCopyright"
					type="editor"
					default=""
					label="Dati Copyright"
					filter="string"
					showon="showCopyright:1"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
